<div class="mt-5">
  <div class="card-deck">
    {{#each courses}}
      <div class="col-sm-6 col-lg-4 mb-3">
        <div class="card">
          <a href="/courses/{{this.slug}}">
            <img
              class="card-img-top"
              src="{{this.image}}"
              alt="{{this.name}}"
              height="200px"
            />
          </a>
          <div class="card-body">
            <h5 class="card-title">{{this.description}}</h5>
            <p class="card-text"><small class="text-muted">Buy Course</small></p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
  <div class="mt-3">
    <div class="row">
      <div class="col-lg-6 offset-lg-3">
        <a class="btn btn-primary btn-lg btn-block" href="/courses/create" role="button">New Course</a>
      </div>
    </div>
  </div>
</div>